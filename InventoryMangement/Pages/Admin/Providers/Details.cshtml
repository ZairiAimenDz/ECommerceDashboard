@page
@model InventoryMangement.Pages.Admin.Providers.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Provider</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider.ProviderName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.ProviderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.PostalCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.Email)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Products != null)
    {
        <table>
            @foreach (var item in Model.Provider.Products)
            {
                <tr>
                    <td>
                        @item.SKU
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Info
                    </td>
                    <td>
                        @item.Brand
                    </td>
                    <td>
                        @item.Condition
                    </td>
                    <td>
                        @item.Color
                    </td>
                    <td>
                        @item.OnStock
                    </td>
                    <td>
                        @item.Location
                    </td>
                    <td>
                        @item.Price
                    </td>
                </tr>
            }
        </table>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Provider.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
